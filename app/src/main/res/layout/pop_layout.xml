<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <TextView
        android:id="@+id/popTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="Text Note"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addTextFb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_file_document_white_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/popTv"
        app:layout_constraintStart_toEndOf="@+id/popTv"
        app:layout_constraintTop_toTopOf="@+id/popTv" />


</androidx.constraintlayout.widget.ConstraintLayout>