<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.AudioRecordFragment">


        <Button
            android:id="@+id/startRecordBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="88dp"
            android:text="Start Recording"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/stopRecordBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Stop Recording"
            app:layout_constraintEnd_toEndOf="@+id/startRecordBtn"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/startRecordBtn"
            app:layout_constraintTop_toBottomOf="@+id/startRecordBtn" />

        <Button
            android:id="@+id/startPlayingBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Start Playing"
            app:layout_constraintEnd_toEndOf="@+id/startRecordBtn"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/startRecordBtn"
            app:layout_constraintTop_toBottomOf="@+id/stopRecordBtn" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
